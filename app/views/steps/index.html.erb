<h1>Listing steps</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Parent</th>
      <th>Step number</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @steps.each do |step| %>
      <tr>
        <td><%= step.text %></td>
        <td><%= step.parent_id %></td>
        <td><%= step.step_number %></td>
        <td><%= link_to 'Edit', edit_guide_step_path(step) %></td>
        <td><%= link_to 'Destroy', guide_step_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

